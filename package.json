{
  "name": "vue-input-calculator",
  "version": "0.4.1",
  "description": "Calculator input component. Mobile friendly.",
  "author": "Ivan Lihomanov <lih1989@yandex.ru>",
  "scripts": {
    "serve": "vue-cli-service serve --port 3000",
    "build": "vue-cli-service build --target lib --name vue-input-calculator src/lib.js",
    "test:unit": "vue-cli-service test:unit",
    "lint": "vue-cli-service lint",
    "deploy": "gh-pages -d demo",
    "predeploy": "vue-cli-service build --mode demo"
  },
  "main": "./lib/vue-input-calculator.common.js",
  "files": [
    "lib",
    "src"
  ],
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-unit-jest": "^4.5.4",
    "@vue/cli-service": "~4.5.0",
    "@vue/test-utils": "^1.0.3",
    "babel-eslint": "^10.1.0",
    "core-js": "^3.6.5",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^6.2.2",
    "gh-pages": "^3.1.0",
    "sass": "^1.26.10",
    "sass-loader": "^9.0.3",
    "vue": "^2.6.11",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {},
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "homepage": "https://lih1989.github.io/vue-input-calculator/",
  "keywords": [
    "vue",
    "input calculator",
    "javascript",
    "vuejs",
    "vue.js",
    "input",
    "calculator",
    "vue component"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lih1989/vue-input-calculator.git"
  }
}
